<%= form_for @user do |f| %>
  <p>
    <%= f.label :username, "Your username here" %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>:
    <%= f.text_field :email, placeholder: "example@example.com" %>
  </p>
  <p>
    <%= f.label :password %>:
    <%= f.password_field :password %>
  <p>
    <%= f.submit "Go! "%>
  </p>
<% end %>